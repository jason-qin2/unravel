{
  "manifest_version": 2,

  "name": "unravel",
  "description": "This extension provides information about the environmental costs of the materials used in pieces of clothing",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "yarn.png",
    "48": "yarn.png",
    "128": "yarn.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-QxcYc9VybqaH/gIW+3x9KOxJsxowASGzVcaOipMjbGk='; object-src 'self'",
  "permissions": [
    "tabs"
  ]
}
